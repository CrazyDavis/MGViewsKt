    <!--將所有元件跟view繼承的上層alpha屬性抽出-->
    <attr name="bv_touch_alpha" format="boolean" />
    <attr name="bw_touch_alpha" format="boolean" />


    <declare-styleable name="MGRoundView">
        <!--外框顏色, 外框寬度, 開始顏色, 結束顏色, 漸變角度(可輸入 45, 90, 135, 180)-->
        <attr name="bv_touch_alpha" />
        <attr name="rv_corner_radius" format="dimension" />
        <attr name="rv_stroke_clr" format="color" />
        <attr name="rv_stroke_width" format="dimension" />
        <attr name="rv_start_clr" format="color" />
        <attr name="rv_center_clr" format="color" />
        <attr name="rv_end_clr" format="color" />
        <attr name="rv_glide_clr" format="color" />
        <attr name="rv_angle" format="integer" />
        <attr name="rv_src" format="reference" />
        <attr name="rv_corner_top_left" format="boolean" />
        <attr name="rv_corner_top_right" format="boolean" />
        <attr name="rv_corner_bottom_left" format="boolean" />
        <attr name="rv_corner_bottom_right" format="boolean" />
        <attr name="rv_triangle_point" format="string" />
        <attr name="rv_outer_clr" format="color" />
        <attr name="rv_text" format="string" />
        <attr name="rv_text_clr" format="color" />
        <attr name="rv_text_size" format="dimension" />
        <attr name="rv_src_type" format="enum" >
            <!--依照比例, 較大邊填滿-->
            <enum name="aspect_fit" value="0" />
            <!--依照比例, 較小邊填滿-->
            <enum name="aspect_fill" value="1" />
            <!--拉深到全滿-->
            <enum name="scale_fill" value="2" />
        </attr>
        <attr name="rv_type" format="enum" >
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
            <enum name="traingle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MGBaseView">
        <attr name="bv_touch_alpha" />
    </declare-styleable>

    <declare-styleable name="BaseWidget">
        <attr name="bw_touch_alpha" />
    </declare-styleable>

